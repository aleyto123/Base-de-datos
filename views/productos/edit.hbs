<h1>Editar Producto</h1>
<form action="/productos/update/{{_id}}" method="POST">
  <input type="text" name="nombre" value="{{nombre}}" required><br>
  <input type="text" name="descripcion" value="{{descripcion}}"><br>
  <input type="number" name="precio" value="{{precio}}" required step="0.01"><br>
  <input type="number" name="stock" value="{{stock}}" required><br>
  <input type="text" name="categoria" value="{{categoria}}"><br>
  <button type="submit">Actualizar</button>
</form>
<a href="/productos">Cancelar</a>
